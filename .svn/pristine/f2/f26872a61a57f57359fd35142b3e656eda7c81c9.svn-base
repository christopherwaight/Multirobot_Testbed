function [W] = distBtwnRobots(NRobot,RobotParams,SimParams)
N = floor(length(RobotParams)/4);
W = zeros(2,2*N); 
xs = zeros(1,N); 
ys = zeros(1,N);
ds = zeros(1,N); 
DL = SimParams(1); 
xs(1:N) = RobotParams(1:4:end); 
ys(1:N) = RobotParams(2:4:end); 
ds(1:N) = sqrt((xs-xs(NRobot)).^2 + (ys-ys(NRobot)).^2); 
%find closest single neighbors
ds(NRobot) = nan; 
[~,idx] = min(ds); 

%[~,idx] = mink(ds,2); 
w = zeros(1,N); 
w(idx) = ds(idx); 
w(ds>DL) = 0; 


W(1,1:2:2*N) = w;
W(2,2:2:2*N) = w; 

end
